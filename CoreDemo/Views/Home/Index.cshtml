@using CoreDemo.Models
@model IEnumerable<Cinema>

<div class="container">
    <div class="row">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Location</th>
                    <th scope="col">Capacity</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @Html.DisplayForModel()
            </tbody>
        </table>

        <a asp-action="Add">添加</a>

        @await Component.InvokeAsync("MovieCount", new { cinemaId = 1});
        <vc:movie-count cinema-id="1"></vc:movie-count>
    </div>
</div>